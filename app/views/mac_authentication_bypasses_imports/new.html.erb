<%= render "layouts/form_errors", resource: @mac_authentication_bypasses_import %>

<%= form_with model: @mac_authentication_bypasses_import, local: true, url: mac_authentication_bypasses_imports_path do |f| %>
  <h2 class="govuk-heading-l">Import bypasses</h2>

  <div class="govuk-form-group">
    <div id="csv-hint" class="govuk-hint">
      Header must contain the following: "<%= CSVImport::MacAuthenticationBypasses::CSV_HEADERS %>"<br /><br />
      Responses must be separated by a semicolon.<br />
      For example: Tunnel-Type=VLAN;Reply-Message=Welcome;SG-Tunnel-Id=333<br /><br />
      File must have extension of ".csv"<br />
    </div>
    <%= f.file_field :bypasses, id: :csv_file, class: "govuk-file-upload" %>
  </div>

  <%= f.submit "Upload", {
    class: "govuk-button",
    "data-module" => "govuk-button"
  } %>

  <%= link_to "Cancel", mac_authentication_bypasses_path,
    class: "govuk-button govuk-button--secondary",
    data: {
      module: "govuk-button"
    }
  %>
<% end %>
