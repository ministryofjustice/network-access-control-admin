<h2 class="govuk-heading-l">Are you sure you want to delete this rule?</h2>

<div class="govuk-inset-text">
  <p class="govuk-body govuk-!-font-weight-bold">
    <%= "#{@rule.request_attribute} #{@rule.operator} #{@rule.value}" %>
  </p>
  <p class="govuk-body">
    <%= "Policy: #{@policy.name}" %>
  </p>
</div>

<%=
  render "shared/destroy_confirmation",
  resource_name: "rule",
  delete_path: policy_rule_path(policy_id: @policy, id: @rule),
  cancel_path: policy_path(@policy)
%>
